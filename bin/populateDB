/**
 * Node program to populate the SDLC database with data
 */
const fs = require('fs');
const console = require('console');
const readline = require('readline');

let filename = process.argv[2] || 'data/usa_00001.dat';
let writeStream = fs.createWriteStream('out.sql');
let insertPrefix = "insert into peeps (year, state_code, weight, sample_data) values ";

writeStream.write('delete from peeps;\n');
let lineReader = readline.createInterface({
  input: fs.createReadStream(filename)
});

lineReader.on('line', function (line){
  if (line.length > 0) {
    // let sep = isFirst? '': ',\n';
    // isFirst = false;
    let year = Number(line.slice(0,4));
    let state = Number(line.slice(31,33));
    let weight = Number(line.slice(40, 50))/100;
    writeStream.write(insertPrefix + '(' + [year, state, weight, "'" + line + "'"].join() + ');\n');
  }
});
